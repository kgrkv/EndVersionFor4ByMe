<Window x:Class="WpfIgora.MainWindow"
         Icon="C:\Users\stud\source\repos\WpfIgora\WpfIgora\Image\logo.png "
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIgora"
        mc:Ignorable="d"
        Title="Окно входа" Height="450" Width="800" FontSize="15" FontFamily="Comic Sans MS">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label MinHeight="30" MinWidth="125" Height="35" Width="130" Margin=" 5">Введите логин</Label>
            <TextBox Name ="tbLogin" MinHeight="30" MinWidth="125" Height="35" Width="130" Margin=" 5"></TextBox>
            <Label MinHeight="30" MinWidth="125" Height="35" Width="130" Margin=" 5">Введите пароль</Label>
            <Button  x:Name="btShowPassword" Click="btShowPassword_Click"  MinHeight="30" MinWidth="125" Height="35" Margin=" 5" Width="130">Показать пароль</Button>
            <PasswordBox Name ="tbPassword" MinHeight="30" MinWidth="125" Height="35" Margin=" 5" Width="130"></PasswordBox>
            <Button x:Name="btEnter" Click="btEnter_Click" MinHeight="30" MinWidth="125" Height="35" Margin=" 5" Width="130">Войти</Button>
        </StackPanel>

    </Grid>
</Window>
